@using Radzen.Blazor.Rendering
@using UserManagement.MVC.Models
@using Microsoft.AspNetCore.Http
@using UserManagement.MVC.Views.Components

@{
    ViewData["Title"] = "Summary";
}

@model BurialMainViewModel

<div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
    <div class="container about px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-6 ps-lg-0" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="position-absolute img-fluid w-100 h-100" src="~/img/sum.jpg" style="object-fit: cover;" alt="">
                </div>
            </div>
            <div class="col-lg-6 about-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 pe-lg-0">
                    <div class="bg-primary mb-3" style="width: 60px; height: 2px;"></div>
                    <h1 class="display-5 mb-4">Burial Summary</h1>
                    <p class="mb-4 pb-2">Welcome to our burial summary page! Here you can browse a list of burials with basic information, such as the location and time period of the burial. You can also filter the results by certain criteria.</p>
                    <p class="mb-4 pb-2">This allows you to delve deeper into the history of the burial and gain a greater understanding of the culture and practices of the time.</p>
                    <p class="mb-4 pb-2">We understand that the database has many fields, so we have focused on offering the most important filters to help you find the information you need quickly and easily. We hope this page will be a valuable resource for anyone interested in the study of burials and the history of past cultures.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <vc:types></vc:types>
        </div>
        <div class="col-9">
            <div page-model="@Model.pageInfo" page-action="Summary" page-class-normal="btn-outline-red" page-class-selected="btn-primary" page-class-enabled="true"></div>

            @foreach (Burialmain bm in Model.burialmains)
            {
                <partial name="BurialSummary" model="bm" />
            }
            <div page-model="@Model.pageInfo" page-action="Summary" page-class-normal="btn-outline-red" page-class-selected="btn-primary" page-class-enabled="true"></div>
        </div>  
    </div>  
</div>

