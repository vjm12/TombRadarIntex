@{
    ViewData["Title"] = "Confirmation";
}
@model Textile

<div class="card bg-light">
    <h2 style="color:red"> CONFIRM DELETE</h2>
    <h3> Are you sure you want to remove Textile: @Model.Id from the Database</h3>
    <h4>Deleting this Textile from the database will be permanent</h4>

    <form method="post" asp-action="DeleteTextileConfirmation">
        <button style="color:red" type="submit">Yes, Delete Textile</button>
        <a asp-controller="Home" asp-action="Summary" asp-route-id="@Model.Id" class="btn btn-outline-primary">Cancel</a>
    </form>
</div>
