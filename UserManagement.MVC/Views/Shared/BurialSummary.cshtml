@model Burialmain
    <div class=" card card-outline-primary m-1 p-1">

        <div class="bg-secondary p-1">
            <h3 style="color:white">Burial ID: @Model.Id</h3>
            <span class="badge bg-gradient" style="float:right ;color:lawngreen"> Square North-South: @Model.Squarenorthsouth @Model.Northsouth</span>
        </div>
        <div class="bg-light">
            <p> Summary: @(Model.Text ?? "Description in Progress")</p>
            <div class="text-right">
                <a asp-controller="Home" asp-action="DetailedBurial" asp-route-id="@Model.Id" class="btn btn-outline-primary">View Detailed Discovery </a>
            </div>
        </div>
    </div>
